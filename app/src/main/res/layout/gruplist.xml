<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:padding="@dimen/l_margin"
        android:gravity="center|left"
        android:layout_marginBottom="@dimen/l_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/download"
            app:civ_border_color="#fafafa"
            app:civ_border_width="2dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.jwsdigital.lib_fonts.CustomeTextView
                android:text="Eko Widodo"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.jwsdigital.lib_fonts.CustomeTextView
                android:text="Eko Widodo"
                android:textSize="10dp"
                android:padding="@dimen/l_margin"
                android:gravity="center|left"
                android:drawableLeft="@drawable/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.jwsdigital.lib_fonts.CustomeTextView
                    android:text="081286541280"
                    android:textSize="10dp"
                    android:padding="@dimen/l_margin"
                    android:gravity="center|left"
                    android:drawableLeft="@drawable/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/add"
                    android:layout_marginLeft="@dimen/l_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.jwsdigital.lib_fonts.CustomeTextView
                android:text="Jakarta"
                android:textSize="10dp"
                android:padding="@dimen/l_margin"
                android:gravity="center|left"
                android:drawableLeft="@drawable/marker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/l_margin"
        android:background="@color/colorPrimaryDark"/>
   <LinearLayout
       android:padding="@dimen/l_margin"
       android:gravity="center|left"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:src="@drawable/walet"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <LinearLayout
           android:padding="@dimen/l_margin"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
            <com.jwsdigital.lib_fonts.CustomeTextView
                android:layout_marginLeft="@dimen/l_margin"
                android:layout_marginRight="@dimen/l_margin"
                android:layout_width="match_parent"
                android:text="Walet"
                android:gravity="center|left"
                android:textAlignment="center"
                android:drawableRight="@drawable/down"
                android:layout_height="wrap_content"/>
       </LinearLayout>
   </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/l_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jwsdigital.lib_fonts.CustomeTextView
            android:textAlignment="center"
            android:text="Saldo"
            android:layout_marginBottom="@dimen/l_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.jwsdigital.lib_fonts.CustomeTextView
            android:padding="@dimen/l_padding"
            android:textAlignment="center"
            android:text="Rp 5.000.000"
            android:textSize="24dp"
            android:textColor="@color/color_Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:padding="@dimen/l_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/rc_bg"
                android:padding="@dimen/l_margin"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:layout_marginRight="30dp"
                android:gravity="center|left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="@dimen/l_margin"
                    android:layout_marginRight="@dimen/r_margin"
                    android:src="@drawable/withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.jwsdigital.lib_fonts.CustomeTextView
                    android:layout_marginLeft="@dimen/l_margin"
                    android:text="Withdraw"
                    android:layout_marginRight="@dimen/r_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/rc_bg"
                android:padding="@dimen/l_margin"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="@dimen/l_margin"
                    android:layout_marginRight="@dimen/r_margin"
                    android:src="@drawable/topup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.jwsdigital.lib_fonts.CustomeTextView
                    android:layout_marginLeft="@dimen/l_margin"
                    android:text="Top Up"
                    android:layout_marginRight="@dimen/r_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/l_margin"
        android:background="@color/colorPrimaryDark"/>
    <LinearLayout
        android:layout_marginBottom="@dimen/l_margin"
        android:gravity="center|left"
        android:padding="@dimen/l_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/edit_prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/l_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.jwsdigital.lib_fonts.CustomeTextView
                android:layout_marginLeft="@dimen/l_margin"
                android:layout_marginRight="@dimen/l_margin"
                android:padding="@dimen/l_margin"
                android:text="Edit Profile"
                android:gravity="center"
                android:drawableRight="@drawable/down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/l_margin"
        android:background="@color/colorPrimaryDark"/>
    <LinearLayout
        android:layout_marginBottom="@dimen/l_margin"
        android:gravity="center|left"
        android:padding="@dimen/l_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/l_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.jwsdigital.lib_fonts.CustomeTextView
                android:layout_marginLeft="@dimen/l_margin"
                android:layout_marginRight="@dimen/l_margin"
                android:padding="@dimen/l_margin"
                android:text="History"
                android:gravity="center"
                android:drawableRight="@drawable/down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/l_margin"
        android:background="@color/colorPrimaryDark"/>
</LinearLayout>